{
  "version": 2,
  "builds": [
    {
      "src": "api/auth/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/auth/callback", "destination": "/api/auth/callback.js" },
    { "source": "/auth/verify", "destination": "/api/auth/verify.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' https://accounts.google.com; style-src 'self' 'unsafe-inline'; img-src 'self' https://*.googleusercontent.com data:;"
        }
      ]
    }
  ]
}
